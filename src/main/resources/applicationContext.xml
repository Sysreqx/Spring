    <!-- В поле name указываем имя сеттера setMusic, автоматически удаляет set, переводит первую букву после set в нижний регистр -->
    <bean id="musicBean"
          class="com.kaisar.springApp1.ClassicalMusic"
          init-method="classicalMusicInit"
          destroy-method="classicalMusicDestroy"
          factory-method="getClassicalMusic">
    </bean>

    <bean id="jazzMusicBean"
          class="com.kaisar.springApp1.JazzMusic"
          scope="prototype"
          init-method="JazzMusicInit"
          destroy-method="JazzMusicDestroy">
    </bean>

    <bean id="musicPlayer"
          class="com.kaisar.springApp1.MusicPlayer">
        <property name="music" ref="musicBean" />

